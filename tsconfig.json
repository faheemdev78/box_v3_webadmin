{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017", // ES5
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    // "declaration": true,
    // "outDir": "./lib",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@_/*": ["./src/*"],
      "@/*": ["./src/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
  },
  "include": [
    "src", 
    "src/**/*", 
    "@types", // or wherever graphql.d.ts is
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js", 
    ".next/types/**/*.ts", 
    "src/aClient/auth_context.tsx", 
    "src/lib/auth.tss", 
    "src/graphql/auth.js"
  ],
  "files": [
    "@types/graphql.d.ts",
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
  
}
